/* src/pages/tabbar/home3.wxss */

.header {
  /* height: 300rpx; */
  width: 100%;
  display: flex;
  padding: 30rpx;
  /* padding-top: 100rpx; */
  background: linear-gradient(180deg, #d81e06,#c01802 70%,#d81e06);
  position: relative;
  color: white;
}

/* 左侧 */

.left_box {
  /* flex: 3; */
  font-size: 32rpx;
}

.userinfo {
  height: 200rpx;
  display: flex;
  align-items: center;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
}

.box_2 {
  padding-left: 20rpx;
}
.box_2 > view:not(:last-child) {
  margin-bottom: 20rpx;
}

.nick_name {
  overflow: hidden;
}

.mobile {
  line-height: 58rpx;
}

/* 右侧 */

.right_box {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: flex-end;
  font-size: 30rpx;
  flex-wrap: nowrap;
  overflow: hidden;
}

.right_box>view {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  position: relative;
}

.right_box_image>image {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.day_click {
  padding: 0 2rpx;
  /* border: 1rpx dotted #d81e06; */
}

.day_click>image {
  padding-left: 4rpx;
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
