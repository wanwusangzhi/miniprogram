/* 广告 */
.boardcast {
  height: 300rpx;
  width: 100%;
  overflow: hidden;
}

.boardcast_swiper {
  width: 100%;
  height: 100%;
  display: flex;
}

.boardcast_swiper_image {
  width: 100%;
  height: 100%;
}

.small swiper-item{
  text-align: center;
}
.small swiper-item > image{
  display: inline-block;
  border-radius: 40rpx;
  width: 90%!important;
  margin: 0 auto;
}
.small swiper-item > image:active{
  box-shadow: 0 0 4rpx 8rpx #f1f1f1;
}